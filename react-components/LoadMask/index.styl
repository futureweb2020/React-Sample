loader-size = 50px
@keyframes loaderfade {
  from {
    opacity 1
  }
  to {
    opacity 0.25
  }
}

.load-mask
    z-index 100
    background rgba(168, 168, 168, 0.31)
    position absolute
    width 100%
    height 100%
    display none
    top 0px
    left 0px

    &.visible
        display block

.loader
    width loader-size
    height loader-size
    position absolute
    top 0px
    left 0px
    right 0px
    bottom 0px
    margin auto
    .loadbar
        border-radius 50px
        box-shadow 0 0 3px rgba(0, 0, 0, 0.3)
        position absolute
        left 44.5%
        top 37%
        width 12%
        height 26%
        background #000
        -webkit-animation loaderfade 1s linear infinite
        -moz-animation loaderfade 1s linear infinite
        -ms-animation loaderfade 1s linear infinite
        -o-animation loaderfade 1s linear infinite
        animation loaderfade 1s linear infinite
        opacity 0

    for index in 0..11
        .loadbar-{index+1}
            -webkit-transform rotate((index*30)deg) translate(0, -142%)
            -moz-transform rotate((index*30)deg) translate(0, -142%)
            -ms-transform rotate((index*30)deg) translate(0, -142%)
            transform rotate((index*30)deg) translate(0, -142%)
            -webkit-animation-delay -(index*1s - round(index/12, 4))
            -moz-animation-delay -(index*1s - round(index/12, 4))
            -ms-animation-delay -(index*1s - round(index/12, 4))
            -o-animation-delay -(index*1s - round(index/12, 4))
            animation-delay -(index*1s - round(index/12, 4))

